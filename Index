// Datos de la malla curricular con requisitos
const malla = [
    {
        semestre: "1er Semestre",
        cursos: [
            { codigo: "ICED 066", nombre: "Educación, Cultura y Naturaleza", requisitos: [] },
            { codigo: "ILLI 060", nombre: "Bases Teóricas del Lenguaje y la Comunicación", requisitos: [] },
            { codigo: "ILLI 065", nombre: "Introducción a los Estudios Literarios", requisitos: [] },
            { codigo: "ILLI 070", nombre: "Taller de las Artes Escénicas", requisitos: [] },
            { codigo: "ILLI 075", nombre: "Taller de Nivelación y Acompañamiento", requisitos: [] },
            { codigo: "PLAC 000", nombre: "Evaluación Inicial Diagnóstica", requisitos: [] },
            { codigo: "PLAC 074", nombre: "Introducción a las Ciencias Sociales", requisitos: [] },
            { codigo: "PLAC 093", nombre: "Lectura Comprensiva y Expresión Escrita", requisitos: [] },
            { codigo: "PLAC 095", nombre: "Comunicación en Lengua Inglesa I", requisitos: [] },
            { codigo: "PLAC 097", nombre: "Tecnología de la Información y la Comunicación", requisitos: [] }
        ]
    },
    {
        semestre: "2do Semestre",
        cursos: [
            { codigo: "DYRE 070", nombre: "Educación Física y Salud", requisitos: [] },
            { codigo: "ICED 071", nombre: "Aprendizaje y Sistemas de Conocimiento", requisitos: [] },
            { codigo: "ICED 082", nombre: "Ética, Relacionalidad y Desarrollo Humano", requisitos: [] },
            { codigo: "ILLI 080", nombre: "Fonética Segmental y Suprasegmental", requisitos: [] },
            { codigo: "ILLI 085", nombre: "Literatura Clásica", requisitos: [] },
            { codigo: "ILLI 090", nombre: "Práctica de Proyecto Vinculante", requisitos: ["ILLI 070"] },
            { codigo: "PLAC 083", nombre: "Sociedad y Modernidad", requisitos: [] },
            { codigo: "PLAC 114", nombre: "Comunicación en Lengua Inglesa II", requisitos: ["PLAC 095"] }
        ]
    },
    // ... (Agrega los demás semestres siguiendo el mismo formato)
];

// Estado de los ramos aprobados
let aprobados = JSON.parse(localStorage.getItem('aprobados')) || {};

// Generar la malla
const grid = document.getElementById("malla-grid");

function renderMalla() {
    grid.innerHTML = "";
    
    malla.forEach(semestre => {
        const semesterDiv = document.createElement("div");
        semesterDiv.className = "semester";
        
        const title = document.createElement("h3");
        title.textContent = semestre.semestre;
        semesterDiv.appendChild(title);
        
        semestre.cursos.forEach(curso => {
            const courseDiv = document.createElement("div");
            courseDiv.className = "course";
            
            // Verificar si está bloqueado por requisitos
            const bloqueado = curso.requisitos.some(req => !aprobados[req]);
            if (bloqueado && !aprobados[curso.codigo]) {
                courseDiv.classList.add("bloqueado");
            }
            
            // Marcar como aprobado si corresponde
            if (aprobados[curso.codigo]) {
                courseDiv.classList.add("aprobado");
            }
            
            courseDiv.innerHTML = `
                <div class="course-code">${curso.codigo}</div>
                <div class="course-name">${curso.nombre}</div>
                ${curso.requisitos.length > 0 ? 
                    `<div class="prerrequisitos">Prerrequisitos: ${curso.requisitos.join(", ")}</div>` : ""
                }
                <button class="btn-aprobar" data-codigo="${curso.codigo}" ${bloqueado && !aprobados[curso.codigo] ? "disabled" : ""}>
                    ${aprobados[curso.codigo] ? "Deshacer" : "Aprobar"}
                </button>
            `;
            
            semesterDiv.appendChild(courseDiv);
        });
        
        grid.appendChild(semesterDiv);
    });
    
    // Agregar event listeners a los botones
    document.querySelectorAll(".btn-aprobar").forEach(btn => {
        btn.addEventListener("click", () => {
            const codigo = btn.getAttribute("data-codigo");
            aprobados[codigo] = !aprobados[codigo];
            localStorage.setItem('aprobados', JSON.stringify(aprobados));
            renderMalla();
        });
    });
}

// Reiniciar progreso
document.getElementById("reset-btn").addEventListener("click", () => {
    if (confirm("¿Estás seguro de reiniciar todo tu progreso?")) {
        localStorage.removeItem('aprobados');
        aprobados = {};
        renderMalla();
    }
});

// Inicializar
renderMalla();
